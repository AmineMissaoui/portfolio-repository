    {% for project in listProjectHome %}
      <div class="col-lg-4 col-6 mb-4 shuffle-item" data-groups="[&quot;{{project.category}}&quot;]">
        <div class="position-relative rounded hover-wrapper">
          {% for image in project.portfolioImages %}
          {% if loop.first %}
          <img src="{{ asset('/uploads/' ~ image.name  ) }}" alt="portfolio-image"  class="img-fluid rounded w-100 d-block">
          {% endif %}
          {% endfor %}
          <div class="hover-overlay">
            <div class="hover-content">
              <div class="project-title">
                
                <h3 class="text-white">{{project.title | u.truncate(14, '...')}}<sup></sup></h3>
              </div>
              <div class="project-description">
                <p class="text-white px-3">{{project.description | u.truncate(70, '...') }}</p>
              </div>
              <a class="btn btn-light btn-sm" href="{{ path('detailPortfolioProject',{'id': project.id }) }}">view project</a>
            </div>
          </div>
        </div>

      </div>
     {% endfor %}