{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block section %} Add blog post item {% endblock %}
{% block body %}

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">

          {{ form_start( formBlog) }}
          <form>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-4">
                  <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label( formBlog.title, 'title') }}</label>
                    {{ form_widget( formBlog.title, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="form-group">
                    <label>{{ form_label( formBlog.createdAt, 'Creation Date') }}</label>
                    {{ form_widget( formBlog.createdAt, {'attr': {'class': 'form-control js-datepicker'}}) }}
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="form-group">
                    <label>{{ form_label( formBlog.deprecatedAt, 'End date') }}</label>
                    {{ form_widget( formBlog.deprecatedAt, {'attr': {'class': 'form-control js-datepicker'}}) }}
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="form-group">
                    <label>{{ form_label( formBlog.blogPostCategory, 'Category') }}</label>
                    {{ form_widget( formBlog.blogPostCategory, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="form-group mb-3">
                    <label>{{ form_label( formBlog.upload, 'Upload') }}</label>
                    <div class="custom-file">
                      {{ form_widget( formBlog.upload, {'attr':  {'class': 'custom-file-input'}}) }}
                      <label class="custom-file-label">Choose file</label>
                    </div>
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label>{{ form_label( formBlog.description, 'description') }}</label>
                    {{ form_widget( formBlog.description, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
                <div class="col-lg-6 offset-lg-6">
                  <div class="form-group d-flex justify-content-end">
                    {{ form_widget( formBlog.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
                </div>
              </div>
            </div>
          </form>
          {{ form_end( formBlog) }}
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
{% endblock %}